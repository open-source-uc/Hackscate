---
import CheckmarkIcon from "@/components/icons/CheckmarkIcon.astro";

interface Benefit {
    name: string;
}

interface SponsorshipLevel {
    title: string;
    price: string;
    benefits: Benefit[];
}

interface Props {
    levels: SponsorshipLevel;
}

const { levels } = Astro.props;
---

<article class="relative overflow-hidden bg-card border-2 border-border rounded-tl-3xl rounded-br-3xl p-10 tablet:p-12 shadow-lg">
    <!-- Accent gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-br from-accent/5 to-transparent pointer-events-none"></div>
    
    <div class="relative z-10">
        <header class="flex flex-col gap-6 mb-10 pb-8 border-b-2 border-accent/20">
            <div class="inline-block">
                <h3 class="font-semibold text-2xl tablet:text-3xl desktop:text-4xl text-foreground mb-2">
                    {levels.title}
                </h3>
            </div>
            <div class="flex items-baseline gap-3">
                <span class="text-4xl tablet:text-5xl font-bold text-accent-foreground font-width-wide">{levels.price}</span>
            </div>
        </header>

        <div class="mb-8">
            <h4 class="text-lg font-semibold text-foreground mb-6 uppercase tracking-wide">{levels.subtitle}</h4>
            <ul class="flex flex-col gap-5 list-none">
                {
                    levels.benefits.map((benefit, index) => (
                        <li class="flex items-center gap-4">
                            <CheckmarkIcon className="w-6 h-6 flex-shrink-0 text-accent" />
                            <span class="text-base tablet:text-lg text-foreground leading-relaxed">
                                {benefit.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</article>
