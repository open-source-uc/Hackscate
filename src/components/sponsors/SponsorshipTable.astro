---
interface Benefit {
    name: string;
}

interface SponsorshipLevel {
    title: string;
    price: string;
    benefits: Benefit[];
}

interface Props {
    levels: SponsorshipLevel;
}

const { levels } = Astro.props;
---

<article class="overflow-hidden bg-muted border-1 border-border rounded-tl-2xl rounded-br-2xl p-6">
    <header class="grid grid-cols-2 gap-4 mb-8 pb-6 border-b border-border">
        <h2 class="col-span-2 font-bold text-3xl text-foreground">{levels.title}</h2>
        <span class="font-semibold text-lg text-muted-foreground align-middle">COST</span>
        <span class="font-bold text-2xl text-end align-middle text-foreground"
            >{levels.price}</span
        >
    </header>

    <ul class="grid grid-cols-[1fr_auto] gap-x-6 gap-y-4 list-none">
        {
            levels.benefits.map((benefit) => (
                <>
                    <li class="text-base text-foreground leading-relaxed">{benefit.name}</li>
                    <li class="flex items-center justify-center">
                        <span
                            class="w-6 h-6 rounded bg-foreground flex items-center justify-center"
                            role="img"
                            aria-label="Included"
                        >
                            <svg
                                class="w-4 h-4 text-background"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="3"
                                aria-hidden="true"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M5 13l4 4L19 7"
                                />
                            </svg>
                        </span>
                    </li>
                </>
            ))
        }
    </ul>
</article>
