---
interface Benefit {
    name: string;
}

interface SponsorshipLevel {
    title: string;
    price: string;
    benefits: Benefit[];
}

interface Props {
    levels: SponsorshipLevel;
}

const { levels } = Astro.props;
---

<article class="overflow-hidden bg-background">
    <!-- Header -->
    <header class="grid grid-cols-2 gap-4 mb-6">
        <h3 class="col-span-2 font-bold text-2xl">{levels.title}</h3>
        <span class="font-bold text-xl text-primary/70 align-middle">COST</span>
        <span class="font-bold text-xl text-end align-middle"
            >{levels.price}</span
        >
    </header>

    <!-- Benefits -->
    <ul class="grid grid-cols-[1fr_auto] gap-x-4 gap-y-3 list-none">
        {
            levels.benefits.map((benefit) => (
                <>
                    <li class="text-base">{benefit.name}</li>
                    <li class="flex items-center justify-center">
                        <span
                            class="w-6 h-6 rounded bg-primary flex items-center justify-center"
                            aria-label="Incluido"
                        >
                            <svg
                                class="w-4 h-4 text-background"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="3"
                                aria-hidden="true"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M5 13l4 4L19 7"
                                />
                            </svg>
                        </span>
                    </li>
                </>
            ))
        }
    </ul>
</article>
