---
interface Props {
    number: number;
    title: string;
    description: string;
}

const { number, title, description } = Astro.props;
const formattedNumber = number.toString().padStart(2, '0');
---

<li class="border-1 border-border bg-muted p-6 rounded-tl-2xl rounded-br-2xl flex flex-col gap-4 hover:border-foreground transition-all">
    <span class="text-sm font-semibold text-muted-foreground">{formattedNumber}.</span>
    <h2 class="text-2xl font-bold text-foreground">{title}</h2>
    <div class="w-full h-px bg-border" />
    <p class="text-muted-foreground leading-relaxed">{description}</p>
</li>
