---
// Animated gradient mesh background with grain effect
---

<div class="animated-background">
    <div class="gradient-mesh"></div>
    <div class="grain-overlay"></div>
</div>

<style>
    .animated-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
        background: var(--background);
    }

    .gradient-mesh {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
                circle at 20% 50%,
                oklch(0.1776 0.40 260) 0%,
                transparent 15%
            ),
            radial-gradient(
                circle at 80% 80%,
                oklch(0.1776 0.15 260) 0%,
                transparent 18%
            ),
            radial-gradient(
                circle at 40% 20%,
                oklch(0.1776 0.40 260) 0%,
                transparent 12%
            ),
            radial-gradient(
                circle at 60% 90%,
                oklch(0.1776 0.15 260) 0%,
                transparent 14%
            ),
            var(--background);
        animation: meshMove 20s ease-in-out infinite;
        filter: blur(80px);
        opacity: 0.3;
    }

    .grain-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='1.5' numOctaves='6' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
        opacity: 0.08;
        mix-blend-mode: overlay;
        pointer-events: none;
    }

    @keyframes meshMove {
        0% {
            transform: translate(0, 0) rotate(0deg);
        }
        33% {
            transform: translate(-5%, 10%) rotate(120deg);
        }
        66% {
            transform: translate(5%, -5%) rotate(240deg);
        }
        100% {
            transform: translate(0, 0) rotate(360deg);
        }
    }

    /* Respect user's reduced motion preference */
    @media (prefers-reduced-motion: reduce) {
        .gradient-mesh {
            animation: none;
        }
    }
</style>
