---
import BrandedImage from "@/components/ui/BrandedImage.astro";

interface Props {
    lang: string;
    t: ReturnType<typeof import("@/i18n/utils").useTranslations>;
}

const { lang, t } = Astro.props;
const e = t("explainer");
---

<section class="flex flex-col items-center justify-center px-6 md:px-12 max-w-5xl mx-auto">
    <h2 id="explainer" class="text-xl font-width-wide tablet:text-2xl desktop:text-3xl font-semibold text-center pb-8">
        {e.overview_title}
    </h2>

    <p class="text-center text-muted-foreground leading-relaxed max-w-3xl pb-8">
        {e.overview_text}
    </p>

    <BrandedImage
        src="/oriente2.webp"
        alt="Hackscate 2025 event photo"
        width={500}
        height={150}
        class="shadow-lg rounded-lg"
    />
</section>
