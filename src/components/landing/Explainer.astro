---
import { Button } from "@/components/ui/button";
import BrandedImage from "@/components/ui/BrandedImage.astro";
import OsucIcon from "@/components/icons/OsucIcon.astro";

interface Props {
    lang: string;
    t: ReturnType<typeof import("@/i18n/utils").useTranslations>;
}

const { lang, t } = Astro.props;
const e = t("explainer");
---

<section class="flex flex-col items-center justify-center pt-28 px-12">
    <h2 class="text-xl font-width-wide tablet:text-2xl desktop:text-3xl font-semibold text-center pb-8">
        {e.title}
    </h2>

    <p class="text-center text-muted-foreground leading-relaxed max-w-3xl pb-8">
        {e.p1}
    </p>

    <BrandedImage
        src="/oriente2.webp"
        alt="Hackscate 2025 event photo"
        width={400}
        height={450}
        class="mb-12 shadow-lg"
    />
</section>
