---
import { Button } from "@/components/ui/button";
import Countdown from "@/components/landing/Countdown";

interface Props {
    lang: string;
    t: ReturnType<typeof import("@/i18n/utils").useTranslations>;
}

const { lang, t } = Astro.props;
const h = t("home");

// Event date: December 5th, 2025
const eventDate = new Date("2025-12-05T00:00:00-03:00"); // Chile timezone (UTC-3)
---

<section class="flex flex-col items-center justify-center">
    <h1 class="text-[2.9rem] tablet:text-[6rem] desktop:text-[10rem] font-bold font-width-wide text-foreground py-4">
        HACKSCATE
    </h1>
    <p class="text-center text-md tablet:text-lg desktop:text-xl text-muted-foreground mx-12">
        {h.subtitle}
    </p>
    <div class="flex flex-row items-center pt-12 gap-4">
        <a href="https://events.mlh.io/events/13213-hackscate-chile" tabindex="-1">
            <Button variant="hackscate" size="hackscate_lg">{h.join}</Button>
        </a>
        <a href="#explainer" tabindex="-1">
            <Button variant="hackscate_outline" size="hackscate_lg">{h.learn_more}</Button>
        </a>
    </div>

    <div class="mt-16">
        <Countdown client:load targetDate={eventDate} />
    </div>
</section>
