---
import Layout from "@layouts/Layout.astro";
import HackscateIcon from "@/components/icons/HackscateIcon.astro";
---

<Layout title="WIP">
    <main class="bg-background h-dvh flex items-center justify-center p-8">
        <section
            class="flex items-center justify-center max-w-6xl w-full"
            aria-label="Landing page"
        >
            <div class="flex gap-8 items-center">
                <header class="flex flex-col gap-4">
                    <h1 class="text-5xl md:text-7xl lg:text-8xl text-primary">
                        Hackscate
                    </h1>
                    <p class="text-2xl md:text-4xl lg:text-5xl text-primary/60">
                        Work in progress
                    </p>
                </header>

                <figure
                    class="flex items-center justify-center pl-5"
                    aria-label="Hackscate logo"
                >
                    <div class="w-full max-w-md lg:max-w-lg xl:max-w-xl">
                        <HackscateIcon iconSize={190} />
                    </div>
                </figure>
            </div>
        </section>
    </main>
</Layout>
