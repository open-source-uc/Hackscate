---
import Layout from "@/layouts/Layout.astro";
import Badge from "@/components/ui/Badge.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import { getSchedule } from "@/data/schedule/index.ts";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const h = t("schedule");
const schedule = await getSchedule(lang);

export async function getStaticPaths() {
    return [{ params: { locale: "en" } }, { params: { locale: "es" } }];
}
---

<Layout lang={lang}>
    <main class="flex flex-col items-center justify-center pt-30 pb-28 px-12">
        <h1 class="text-[2.9rem] tablet:text-[6rem] desktop:text-[10rem] font-bold font-width-wide text-foreground text-center pb-4">
            {h.layout_title.toUpperCase()}
        </h1>
        
        <p class="text-center text-md tablet:text-lg desktop:text-xl text-muted-foreground max-w-2xl pb-16">
            {h.layout_description}
        </p>
        
        <div class="w-full max-w-5xl flex flex-col gap-6">
            {
                schedule["schedule"].map((item, index) => {
                    const {start_time, end_time, title, description, type, location} = item;
                    return (
                        <article class="grid grid-cols-1 tablet:grid-cols-[auto_1fr] bg-card/50 backdrop-blur-sm border border-border rounded-xl overflow-hidden">
                            <div class="flex flex-col items-center justify-center bg-gradient-to-br from-muted/60 to-muted/40 p-8 tablet:min-w-[200px] border-b tablet:border-b-0 tablet:border-r border-border/50">
                                <time class="text-3xl tablet:text-4xl font-bold font-mono text-foreground">
                                    {start_time}
                                </time>
                                <div class="flex items-center gap-2 my-2">
                                    <div class="h-px w-4 bg-muted-foreground/40"></div>
                                    <span class="text-xs text-muted-foreground/60">to</span>
                                    <div class="h-px w-4 bg-muted-foreground/40"></div>
                                </div>
                                <time class="text-xl tablet:text-2xl font-mono text-muted-foreground">
                                    {end_time}
                                </time>
                            </div>
                            
                            <div class="p-8 flex flex-col gap-4 relative">
                                {type && (
                                    <Badge className="tablet:absolute right-6 top-6 text-sm font-medium shadow-sm mb-2 tablet:mb-0 w-fit">
                                        {type}
                                    </Badge>
                                )}
                                
                                <h2 class="text-2xl tablet:text-3xl font-semibold text-foreground tablet:pr-28">
                                    {title}
                                </h2>
                                
                                <p class="text-base tablet:text-lg text-muted-foreground leading-relaxed max-w-3xl">
                                    {description}
                                </p>
                                
                                {location && (
                                    <div class="flex items-center gap-2 text-sm text-muted-foreground mt-2">
                                        <svg class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        <span class="font-medium">{location}</span>
                                    </div>
                                )}
                            </div>
                        </article>
                    )
                })
            }
        </div>
    </main>
</Layout>
