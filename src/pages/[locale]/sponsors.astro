---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/ui/Card.astro";
import SponsorshipTable from "@/components/sponsors/SponsorshipTable.astro";
import BrandedImage from "@/components/ui/BrandedImage.astro";
import { Button } from "@/components/ui/button";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const s = t("sponsors");

const sections = s.sidebar;
const sponsorshipLevels = s.matrix_section.table_data;

export async function getStaticPaths() {
    return [{ params: { locale: "en" } }, { params: { locale: "es" } }];
}
---

<Layout
    title={s.layout_title}
    lang={lang}
    activeNavBar={true}
    description={s.layout_description}
>
    <main class="h-full w-ful flex flex-col py-30 gap-40">
        <!-- Hero Section with Navigation -->
        <section class="flex flex-col items-center justify-center  px-5">
            <h1 class="text-[2.9rem] tablet:text-[6rem] desktop:text-[8rem] font-bold font-width-wide text-foreground py-4 text-center">
                {s.layout_title.toUpperCase()}
            </h1>
            <p class="text-center text-md tablet:text-lg desktop:text-xl text-muted-foreground mx-12 max-w-3xl">
                {s.layout_description}
            </p>
            
            <!-- Navigation Buttons -->
            <nav class="flex flex-wrap items-center justify-center pt-12 gap-3">
                {sections.map((section: { id: string; title: string }) => (
                    <a href={`#${section.id}`} tabindex="-1">
                        <Button variant="hackscate_outline" size="hackscate_lg">
                            {section.title}
                        </Button>
                    </a>
                ))}
            </nav>
        </section>

        <!-- Content Sections -->
        <section id="introduction" class="flex flex-col items-center justify-center gap-8">
            <h2 class="text-xl font-width-wide tablet:text-2xl desktop:text-3xl font-semibold text-center">
                {s.introduction_section.title}
            </h2>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.introduction_section.p1}
            </p>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.introduction_section.p2}
            </p>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.introduction_section.p3}
            </p>

            <BrandedImage
                src="/people.webp"
                alt="Centro de Extensión Campus Oriente"
                width={350}
                height={350}
            />
        </section>

        <section id="hackscate-event" class="flex flex-col items-center justify-center px-12 gap-8">
            <h2 class="text-xl font-width-wide tablet:text-2xl desktop:text-3xl font-semibold text-center">
                {s.event_section.title}
            </h2>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.event_section.p1}
            </p>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.event_section.p2}
            </p>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.event_section.p3}
            </p>
            <BrandedImage
                src="/oriente2.webp"
                alt="Centro de Extensión Campus Oriente"
                width={350}
                height={350}
            />
        </section>

        <section id="attendee-profile" class="flex flex-col items-center justify-center px-12 gap-8">
            <h2 class="text-xl font-width-wide tablet:text-2xl desktop:text-3xl font-semibold text-center">
                {s.profile_section.title}
            </h2>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.profile_section.description}
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl w-full">
                <Card
                    number={1}
                    title={s.profile_section.card1_title}
                    text={s.profile_section.card1_desc}
                    class="min-h-[250px]"
                />
                <Card
                    number={2}
                    title={s.profile_section.card2_title}
                    text={s.profile_section.card2_desc}
                    class="min-h-[250px]"
                />
                <Card
                    number={3}
                    title={s.profile_section.card3_title}
                    text={s.profile_section.card3_desc}
                    class="min-h-[250px]"
                />
            </div>
        </section>

        <section id="prospective-matrix" class="flex flex-col items-center justify-center px-12 gap-8">
            <h2 class="text-xl font-width-wide tablet:text-2xl desktop:text-3xl font-semibold text-center">
                {s.matrix_section.title}
            </h2>
            <div class="max-w-4xl w-full">
                <SponsorshipTable levels={sponsorshipLevels} />
            </div>
        </section>

        <section id="contact" class="flex flex-col items-center justify-center px-12 gap-8">
            <h2 class="text-xl font-width-wide tablet:text-2xl desktop:text-3xl font-semibold text-center">
                {s.contact_section.title}
            </h2>
            <p class="text-center text-muted-foreground leading-relaxed max-w-3xl">
                {s.contact_section.p1_start}
                <a
                    href="mailto:hack.sponsor@osuc.dev"
                    class="hover:underline font-semibold">hack.sponsor@osuc.dev</a
                >{s.contact_section.p1_end}
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="mailto:hack.sponsor@osuc.dev" tabindex="-1">
                    <Button variant="hackscate" size="hackscate_lg"
                        >Contact Us</Button
                    >
                </a>
            </div>
        </section>
    </main>
</Layout>
