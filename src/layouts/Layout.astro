---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import AnimatedBackground from "@/components/AnimatedBackground.astro";

interface Props {
    title?: string;
    description?: string;
    activeNavBar?: boolean;
    lang: "es" | "en";
}

const {
    title = "Hackscate",
    description = "Hackaton Open Source UC - Hackscate",
    lang,
    activeNavBar = true,
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="author" content="Open Source UC" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="relative bg-background font-sans text-foreground min-h-dvh py-4">
        <AnimatedBackground />
        {activeNavBar && <Header lang={lang} />}
        <slot />
        <Footer lang={lang} />
    </body>
</html>
